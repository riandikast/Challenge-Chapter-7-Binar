<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:text="Home"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_toLeftOf="@+id/profile"
            android:text="Username"
            android:id="@+id/welcome"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:id="@+id/profile"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp">

        </ImageView>





    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/newmovielayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/newmovie"
                        android:text="New Movie"
                        android:textSize="22sp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@+id/newmovie"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40dp"
                        android:layout_marginStart="20dp">
                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>
            </ScrollView>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/popularmovelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/popularmovie"
                        android:text="Popular Movie"
                        android:textSize="22sp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@+id/popularmovie"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/listpopular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40dp"
                        android:layout_marginStart="20dp">
                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/recmovielayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/recmovie"
                        android:text="Recommended For You"
                        android:textSize="22sp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@+id/recmovie"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/listrecommend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="60dp"
                        android:layout_marginStart="20dp">
                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>